extends ../layout

block content 
    div(class='authbox')
        if !user
            div 
                h2 Login
            div 
                p If you don't have ID... 
                    a(href="/auth/signup") Sign Up 
            div
                form(classaction="/auth/login", method="post") 
                    div 
                        input(class='rgb-180-180-180' type="text", name="id" placeholder="ID")
                    div 
                        input(class='rgb-180-180-180' type="password", name="password" placeholder="Password")
                    div 
                        input(type="submit" class='form-submit' value='Login')

            include ../error
        else 
            p You have already Login!
            p
                a(href="/") Go to Mainpage