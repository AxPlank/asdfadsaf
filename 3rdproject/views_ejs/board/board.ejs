<%- include('../header') %>
    <div class="category">
        <div>
            <h2>Category</h2>
        </div>
        <div>
            <% for (let i = 0; i < leagues.length; i++) { %>
                <a href="/board/<%= leagues[i].category.replace(/ /g, '_') %>"><%= leagues[i].category %></a>
            <% } %>
        </div>
    </div>
    <div class="board-body">
        <div>
            <h2>Notice</h2>
        </div>
        <table>
            <thead>
                <tr>
                    <td class="board-No">No</td>
                    <td class="board-category">Category</td>
                    <td class="board-title">Notice</td>
                    <td class="board-writer">Writer</td>
                    <td class="board-date">Date</td>
                    <% if (auth ==="admin") { %>
                        <td>Delete?</td>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < notices.length; i++) { %>
                    <tr>
                        <td class="board-No"><%= notices.length - i %></td>
                        <td class="board-category"><%= notices[i].category %></td>
                        <td class="board-title">
                            <a href="/board/<%= notices[i].category.replace(/ /g, '_') %>/<%= notices[i].board_id %>"><%= notices[i].title %></a>
                        </td>
                        <td class="text-overflow"><%= notices[i].auth %></td>
                        <td class="board-date"><%= new Date(notices[i].create_date).toLocaleDateString() %></td>
                        <% if (auth ==="admin") { %>
                            <td>
                                <a href="/board/<%= notices[i].category.replace(/ /g, '_') %>/<%= notices[i].board_id %>/delete">Delete</a>
                            </td>
                        <% } %>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div>
            <h2>Posts</h2>
        </div>
        <table>
            <thead>
                <tr>
                    <td class="board-No">No</td>
                    <td class="board-category">Category</td>
                    <td class="board-title">Post</td>
                    <td class="board-writer">Writer</td>
                    <td class="board-date">Date</td>
                    <% if (auth ==="admin") { %>
                        <td>Delete?</td>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < postlist.length; i++) { %>
                    <tr>
                        <td class="board-No"><%= postlist.length - i %></td>
                        <td class="board-category"><%= postlist[i].category %></td>
                        <td class="board-title">
                            <a href="/board/<%= postlist[i].category.replace(/ /g, '_') %>/<%= postlist[i].board_id %>"><%= postlist[i].title %></a>
                        </td>
                        <td class="text-overflow"><%= postlist[i].auth %></td>
                        <td class="board-date"><%= new Date(postlist[i].create_date).toLocaleDateString() %></td>
                        <% if (auth ==="admin") { %>
                            <td>
                                <a href="/board/<%= postlist[i].category.replace(/ /g, '_') %>/<%= postlist[i].board_id %>/delete">Delete</a>
                            </td>
                        <% } %>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <ul>
            <% if (category) { %>
                <li><a href="/board/<%= category %>?page=1">처음으로</a></li>
                <li><a href="/board/<%= category %>?page=<%= (currentPage-10 > 0)?(currentPage-10):1 %>">-10</a></li>
                <li><a href="/board/<%= category %>?page=1">처음으로</a></li>
            <% } else { %>
            <% } %>
        </ul>
    </div>
    <div class="board-tail">
        <% if (user) { %>
            <a href="/board/post" class="a-btn">Post</a>
        <% } %>
    </div>
<%- include('../footer') %>