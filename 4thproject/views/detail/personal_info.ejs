<section>
    <div>
        <%- include('../search') %>
    </div>
    <div>
        <div>
            <h2>회원 정보</h2>
        </div>
        <div>
            <div>
                <div>ID</div>
                <div><%= instance.user_id %></div>
            </div>
            <div>
                <div>닉네임</div>
                <div><%= instance.nickname %></div>
            </div>
            <div>
                <div>핸드폰</div>
                <div><%= instance.phone_number %></div>
            </div>
            <div>
                <div>E-mail</div>
                <div><%= instance.email %></div>
            </div>
            <div>
                <div>인증 여부</div>
                <div>
                    <% if (instance.authentication === "Y") { %>
                        인증
                    <% } else { %>
                        미인증
                    <% } %>
                </div>
            </div>
        </div>
        <div>
            <div>
                <h2>관리자 지정</h2>
            </div>
            <form method="post" action="/admin/<%= table %>/<%= instance.id %>">
                <label for="authority">관리자 여부</label>
                <input type="checkbox" id="authority" name="authority">
                <input type="submit" value="저장">
            </form>
        </div>
    </div>
</section>