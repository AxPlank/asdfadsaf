<section>
    <div>
        <%- include('../search') %>
    </div>
    <% if (instance.authority !== "admin") { %>
        <div>
            <div>
                <h2>회원 정보</h2>
            </div>
            <div>
                <div>
                    <div>ID</div>
                    <div><%= instance.user_id %></div>
                </div>
                <div>
                    <div>닉네임</div>
                    <div><%= instance.nickname %></div>
                </div>
                <div>
                    <div>핸드폰</div>
                    <div><%= instance.phone_number %></div>
                </div>
                <div>
                    <div>E-mail</div>
                    <div><%= instance.email %></div>
                </div>
                <div>
                    <div>인증 여부</div>
                    <div>
                        <% if (instance.authentication === "Y") { %>
                            인증
                        <% } else { %>
                            미인증
                        <% } %>
                    </div>
                </div>
            </div>
            <div>
                <div>
                    <h2>관리자 지정</h2>
                </div>
                <%- include('../error') %>
                <form method="post" action="/admin/<%= table %>/<%= instance.personal_id %>">
                    <label for="authority">체크 후 저장 시, 관리자로 지정</label>
                    <input type="checkbox" id="authority" name="authority">
                    <input type="submit" value="저장">
                </form>
            </div>
        </div>
    <% } else { %>
        <a href="/admin/personal_info">BACK</a>
    <% } %>
</section>