<section>
    <div>
        <form method="get" action="/admin/board">
            <select id="searchType" name="searchType">
                <option value="all">제목+내용+작성자</option>
                <option value="title">제목</option>
                <option value="content">내용</option>
                <option value="auth">작성자</option>
            </select>
            <input type="text" id="searchword" name="searchword">
            <input type="submit" value="검색">
        </form>
    </div>
    <div>
        <form>
            <input type="checkbox" id="allcheck" value="allcheck" onclick="allclick(this)">
            <% for (let i = 0; i < instances.length; i++) { %>
                <div>
                    <div>
                        <input type="checkbox" id="instance" name="instance" value="<%= instances[i].board_id %>">
                    </div>
                    <div>
                        <a href="/admin/board/<%= instances[i].board_id %>"><%= instances[i].title %></a>
                    </div>
                    <div>
                        <%= instances[i].auth %>
                    </div>
                </div>
            <% } %>
        </form>
    </div>
</section>