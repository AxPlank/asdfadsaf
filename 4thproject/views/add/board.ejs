<section>
    <div>
        <h2><%= table %></h2>
        <p>공지사항 작성</p>
    </div>
    <div>
        <%- include('../error') %>
        <form method="post" action="/admin/board/add">
            <label for="title">제목</label>
            <input type="text" id="title" name="title" value="<%= form?form.title:'' %>">
            <label for="category">카테고리</label>
            <select id="category" name="category">
                <% for (let i = 0; i < leagues.length; i++) { %>
                    <option value="<%= leagues[i].category %>"><%= leagues[i].category %></option>
                <% } %>
            </select>
            <label for="content">내용</label>
            <textarea id="content" name="content"><%= form?form.content:"" %></textarea>
            <input type="submit" value="등록">
        </form>
    </div>
</section>